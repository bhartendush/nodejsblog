extends layout

block content
  h1= title  
  p Welcome to Posts area
  if posts
    each post, i in posts
     .post
      h1
       a(href='/posts/show/#{post._id}')
        =post.title
      p.memta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("MM-DD-YYY")}
      div.pst-bdy #{post.body}
      a.more(href='/post/show/#{post._id}') Read more
